<h1 class="text-center py-4">All Users</h1>
<div class="text-center mb-4">
  <%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>
</div>

<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="py-2">Name</th>
            <th class="py-2">Email</th>
            <th class="py-2">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td class="py-2"><%= user.name %></td>
              <td class="py-2"><%= user.email %></td>
              <td class="py-2">
                <%= link_to 'Show', user_path(user), class: 'btn btn-info' %>
                <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning' %>
                <%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }, class: 'btn btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

