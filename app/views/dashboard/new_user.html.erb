<h2>Create New User</h2>

<%= form_with model: @user, url: create_dashboard_user_path do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :email %>
  <%= form.email_field :email %>

  <%= form.label :password %>
  <%= form.password_field :password %>

  <%= form.label :role %>
  <%= form.select :role, ['admin', 'store_admin', 'user'] %>

  <%= form.submit 'Create User' %>
<% end %>
